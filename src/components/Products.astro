---
import { Icon } from 'astro-icon/components';
import '../styles/global.css';
import { products } from './products';
---

<section>
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 mt-10">
    <div class="text-center">
      <h2 class="text-xl font-bold text-gray-900 sm:text-3xl">Productos</h2>

      <p class="mx-auto mt-4 max-w-md text-gray-500">
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Itaque praesentium cumque iure
        dicta incidunt est ipsam, officia dolor fugit natus?
      </p>
    </div>

    <ul class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {products.map((product) => (
        <li class="group block overflow-hidden">
          <div class="flex flex-col gap-3 bg-cyan-100/60 rounded-2xl p-3">
            <img
              src={product.image}
              alt=""
              class="h-[200px] w-full object-cover transition duration-500 group-hover:scale-103 rounded-2xl"
            />

            <div class="flex justify-between items-center">
              <div class="flex flex-col gap-2">
                <h3 class="text-xl text-black font-semibold group-hover:underline group-hover:underline-offset-4">
                  {product.name}
                </h3>

                <div class="flex items-center gap-3">
                  <Icon name="price" class="size-6" />
                  <span class="tracking-wider text-gray-900">${product.price}</span>
                </div>
              </div>
              <button class="flex justify-center items-center size-12 rounded-full cursor-pointer">
                <Icon name="cart" class="size-7" />
              </button>
            </div>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>
