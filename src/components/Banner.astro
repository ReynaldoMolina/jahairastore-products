---
import { Icon } from 'astro-icon/components';
import banner from '../assets/banner.jpg';
import '../styles/global.css';
---

<section class="flex flex-col md:flex-row md:h-[90vh] px-4 sm:px-6 lg:px-8 max-w-screen-xl mx-auto py-8 sm:py-12">
