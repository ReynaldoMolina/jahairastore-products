---
import { Icon } from 'astro-icon/components';
import '../styles/global.css';

const socialLinks = [
  {
    name: 'facebook',
    url: 'https://www.facebook.com/profile.php?id=61560253337819'
  },
  {
    name: 'tiktok',
    url: 'https://www.tiktok.com/@jahaira_store'
  },
  {
    name: 'whatsapp',
    url: 'https://api.whatsapp.com/send?phone=%2B50589531428'
  }
];

const cartBadge = 2;
---

<header class="bg-white border-b-1 border-b-neutral-200 mb-5">
  <div class="mx-auto flex h-16 max-w-screen-xl items-center gap-8 px-4 sm:px-6 lg:px-8">
    <a class="flex items-center gap-3 text-teal-600" href="/">
      <Icon name="logo-letters" class="h-15 w-40" />
    </a>

    <div class="flex flex-1 items-center justify-end gap-4">
      <!-- <nav aria-label="Global">
        <ul class="flex items-center gap-6 text-sm">
          <li>
            <a class="text-gray-500 transition hover:text-gray-500/75" href="#">Jahaira Store</a>
          </li>
        </ul>
      </nav> -->

      <button
        class="flex items-center gap-2 rounded-xl bg-teal-300/70 px-3 py-2.5 transition hover:bg-teal-300 cursor-pointer"
      >
        <Icon name="cart" />
        <span class="text-sm font-semibold">Carrito</span>
        <span class=`${cartBadge === 0 && "hidden"} flex items-center justify-center rounded-full size-6 text-xs bg-red-300 font-bold`>{cartBadge}</span>
      </button>

      <div class="items-center gap-4 hidden sm:flex">
        {socialLinks.map((link) => 
          <a
            class="size-10 text-black transition rounded-full hover:bg-teal-300/70"
            href={link.url} target="_blank"
          >
            <Icon name={link.name} class="size-full p-2" />
          </a>
        )}
      </div>
    </div>
  </div>
</header>
